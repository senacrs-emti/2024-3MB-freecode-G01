<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8FBE9E"
    tools:context=".Login">

    <TextView
        android:id="@+id/titulo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/londrina_solid"
        android:letterSpacing="0.05"
        android:text="ECOEXPLORA"
        android:textColor="#1B485F"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/seta3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/seta3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp"
        android:rotation="180"
        android:text="➜"
        android:textColor="#1B485F"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:background="@null"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <androidx.cardview.widget.CardView
        android:layout_width="339dp"
        android:layout_height="420dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#1B485F"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seta3">

        <TextView
            android:id="@+id/tituloLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:fontFamily="@font/londrina_solid"
            android:letterSpacing="0.05"
            android:paddingTop="20dp"
            android:text="LOGIN"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="-110dp"
            android:fontFamily="@font/amaranth"
            android:text="Nome de usuário:"
            android:textColor="#EFF8FD"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="287dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:layout_marginTop="-75dp"
            android:background="#E4EEF3"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="-30dp"
            android:fontFamily="@font/amaranth"
            android:text="Senha:"
            android:textColor="#EFF8FD"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="287dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#E4EEF3"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="-60dp"
            android:fontFamily="@font/amaranth"
            android:text="Escolha uma foto de perfil:"
            android:textColor="#EFF8FD"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>