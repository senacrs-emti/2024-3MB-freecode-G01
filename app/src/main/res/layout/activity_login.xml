<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8FBE9E"
    tools:context=".Login">

    <TextView
        android:id="@+id/titulo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/londrina_solid"
        android:letterSpacing="0.05"
        android:text="ECOEXPLORA"
        android:textColor="#1B485F"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/setaAnimais"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/setaAnimais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp"
        android:rotation="180"
        android:text="➜"
        android:textColor="#1B485F"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/fundoTop2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:background="@null"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardLoginPag"
        android:layout_width="339dp"
        android:layout_height="450dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#1B485F"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toTopOf="@+id/cardDevLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setaAnimais">

        <TextView
            android:id="@+id/tituloLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:fontFamily="@font/londrina_solid"
            android:letterSpacing="0.05"
            android:paddingTop="20dp"
            android:text="LOGIN"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="-130dp"
            android:fontFamily="@font/amaranth"
            android:text="Nome de usuário:"
            android:textColor="#EFF8FD"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextNome"
            android:layout_width="287dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:layout_marginTop="-95dp"
            android:background="#E4EEF3"
            android:ems="10"
            android:inputType="text"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="-50dp"
            android:fontFamily="@font/amaranth"
            android:text="Senha:"
            android:textColor="#EFF8FD"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextSenha"
            android:layout_width="287dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:layout_marginTop="-15dp"
            android:background="#E4EEF3"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textProfilePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="-40dp"
            android:fontFamily="@font/amaranth"
            android:text="Escolha uma foto de perfil:"
            android:textColor="#EFF8FD"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPerfil1"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="bottom|left"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="75dp"
            app:cardCornerRadius="100dp">

            <ImageButton
                android:id="@+id/imageProfile1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cajo" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPerfil2"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="75dp"
            app:cardCornerRadius="100dp">

            <ImageButton
                android:id="@+id/imageProfile2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/pato" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPerfil3"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="75dp"
            app:cardCornerRadius="100dp">

            <ImageButton
                android:id="@+id/imageProfile3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/urso" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/acessarButton"
            android:layout_width="287dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#E4EEF3"
            android:fontFamily="@font/londrina_solid"
            android:text="ACESSAR"
            android:textAlignment="center"
            android:textColor="#1B485F"
            android:textSize="24dp"
            app:cornerRadius="15dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDevLogin"
        android:layout_width="339dp"
        android:layout_height="51dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardLoginPag">

        <ImageView
            android:id="@+id/fundoBottom1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/image1" />

        <ImageButton
            android:id="@+id/fundoBottom2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:background="@null"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/image2" />

        <TextView
            android:id="@+id/textBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/londrina_solid"
            android:text="Desenvolvedores"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textSetaBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:paddingRight="5dp"
            android:text="➜"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>