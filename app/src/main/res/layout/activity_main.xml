<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8FBE9E"
    tools:context=".MainActivity" >

    <FrameLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/rounded1"
            android:layout_width="450dp"
            android:layout_height="450dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="430dp"
            app:srcCompat="@drawable/rounded_corners1" />

        <ImageView
            android:id="@+id/rounded2"
            android:layout_width="420dp"
            android:layout_height="420dp"
            android:layout_gravity="start"
            android:layout_marginStart="-100dp"
            android:layout_marginTop="480dp"
            app:srcCompat="@drawable/rounded_corners2" />

        <ImageView
            android:id="@+id/rounded3"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:layout_marginTop="410dp"
            app:srcCompat="@drawable/rounded_corners3" />

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/londrina_solid"
            android:letterSpacing="0.05"
            android:text="ECOEXPLORA"
            android:textColor="#1B485F"
            android:textSize="42sp" />

        <Button
            android:id="@+id/iniciar"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="70dp"
            android:backgroundTint="#61742C"
            android:fontFamily="@font/londrina_solid"
            android:text="INICIAR"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="normal" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>