<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8FBE9E"
    tools:context=".Login">

    <TextView
        android:id="@+id/titulo4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/londrina_solid"
        android:letterSpacing="0.05"
        android:text="ECOEXPLORA"
        android:textColor="#1B485F"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/setaAnimais"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/setaAnimais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp"
        android:rotation="180"
        android:text="➜"
        android:textColor="#1B485F"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/fundoTop2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:background="@null"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardLoginPag1"
        android:layout_width="339dp"
        android:layout_height="318dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#1B485F"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toTopOf="@+id/cardDevLogado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setaAnimais">

        <TextView
            android:id="@+id/tituloLogado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:fontFamily="@font/londrina_solid"
            android:letterSpacing="0.05"
            android:paddingTop="20dp"
            android:text="LOGIN"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textNomeLogado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/amaranth"
            android:text="Você está conectado!"
            android:textColor="#EFF8FD"
            android:textSize="20sp" />

        <Button
            android:id="@+id/acessarButtonLogado"
            android:layout_width="287dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#E4EEF3"
            android:fontFamily="@font/londrina_solid"
            android:text="HOME"
            android:textAlignment="center"
            android:textColor="#1B485F"
            android:textSize="24dp"
            app:cornerRadius="15dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDevLogado"
        android:layout_width="339dp"
        android:layout_height="51dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardLoginPag1">

        <ImageView
            android:id="@+id/fundoBottomLogado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/image1" />

        <ImageButton
            android:id="@+id/fundoBottom2Logado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:background="@null"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/image2" />

        <TextView
            android:id="@+id/textBottomLogado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/londrina_solid"
            android:text="DESENVOLVEDORES"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textSetaBottomLogado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:paddingRight="5dp"
            android:text="➜"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>