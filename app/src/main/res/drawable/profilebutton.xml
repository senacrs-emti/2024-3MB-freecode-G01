<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Camada de fundo colorido -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1B485F" /> <!-- Cor de fundo desejada -->
            <corners android:radius="360dp" /> <!-- Bordas arredondadas -->
        </shape>
    </item>

    <!-- Camada da imagem de perfil -->
    <item>
        <bitmap
            android:src="@drawable/perfil"
        android:gravity="center"/>
    </item>
</layer-list>
